<div>
  <img src="<%= gif.url %>" class="img-responsive">
  <h5>Image URL:</h5>
  <p><%= gif.url %></p>
  <h5>Uploaded By:</h5>
  <p><%= gif.user.username %></p>
  <h5>Uploaded At:</h5>
  <p><%= gif.created_at %></p>
</div>
<% if current_user %>
  <div id="voting" class="pull-right">
    <div id="vote-count">
      <p><%= gif.plusminus %></p>
    </div>
    <div id="vote-arrows">
      <%= link_to gif_upvote_path(gif), remote: true do %>
        <%= image_tag("up-arrow.svg", class: "vote-arrow", id: "up-arrow") %>
      <% end %>
      <%= link_to gif_downvote_path(gif), remote: true do %>
        <%= image_tag("down-arrow.svg", class: "vote-arrow", id: "down-arrow") %>
      <% end %>
    </div>
  </div>
<% end %>
